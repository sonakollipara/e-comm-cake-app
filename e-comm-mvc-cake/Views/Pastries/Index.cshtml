@model List<Pastry>

@{
	ViewData["Title"] = "List Of Pastries";
}
<h1>LIST OF PASTRIES</h1>
<table class="table">
	<thead>
		<tr>
			<td style="font-weight:bold;font-size:40px">Id</td>
			<th style="font-weight:bold;font-size:40px">Pastry Image</th>
			<th style="font-weight:bold;font-size:40px">Pastry Name</th>
			<th style="font-weight:bold;font-size:40px">Pastry Flavour</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td style="font-weight:bold;font-size:30px">@item.Id</td>;
					<td><img src="@item.PastryImage" alt="PastryName" class="rounded-circle"style="max-width:100px" /></td>;
					<td style="font-style:italic;font-size:30px">@item.PastryName</td>;
					<td style="font-style:italic;font-size:30px">@item.PastryFlavour</td>;
					<td class="align-middle">
						<a class="btn btn-outline-primary"asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
						<a class="btn btn-outline-info"asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
						<a class="btn btn-danger"asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
					</td>
				</tr>				
			}		
	</tbody>
</table>

<div class="text-white">
	<a asp-controller="Pastries" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>

