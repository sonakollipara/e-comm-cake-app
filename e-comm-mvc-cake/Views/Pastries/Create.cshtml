@model Pastry
@{
	ViewData["Title"] = "Add A New Pastry Product";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Pastry</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="PastryImagePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PastryImage" class="control-label"></label>
                        <input asp-for="PastryImage" class="form-control" />
                        <span asp-validation-for="PastryImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PastryName" class="control-label"></label>
                        <input asp-for="PastryName" class="form-control" />
                        <span asp-validation-for="PastryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PastryFlavour" class="control-label"></label>
                        <select asp-for="PastryFlavour" class="form-control">
                            <option value ="">Select Flavour</option>
                            @foreach (var flavour  in Enum.GetValues(typeof(e_comm_mvc_cake.Data.Flavour)))
                            {
                                <option value="@flavour">@flavour</option>
                            }
                        </select>
                        <span asp-validation-for="PastryFlavour" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('PastryImagePreview');
            output.src = $('#PastryImage').val();
        })
        $("#PastryImage").on("change", function () {
            var output = document.getElementById('PastryImagePreview');
            output.src = $(this).val();
        })
    </script>
}