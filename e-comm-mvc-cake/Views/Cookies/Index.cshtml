@model List<Cookie>

@{
	ViewData["Title"] = "List Of Cookies";
}

<H1>LIST OF COOKIES</H1>
<table class="table">	
	<thead>
		<tr>
			<td style="font-weight:bold;font-size:40px">Id</td>
			<td style="font-weight:bold;font-size:40px">Cookie Image</td>
			<td style="font-weight:bold;font-size:40px">Cookie Name</td>
			<td style="font-weight:bold;font-size:40px">Cookie Flavour</td>
		</tr>
	</thead>
	<tbody>	
			@foreach (var item in Model)
			{
				<tr>
					<td style="font-weight:bold;font-size:30px">@item.Id</td>;
					<td><img src="@item.CookieImage" alt="CookieName" style="max-width:100px;" class="rounded-circle"/></td>;
					<td style="font-style:italic;font-size:30px">@item.CookieName</td>;
					<td style="font-style:italic;font-size:30px">@item.CookieFlavour</td>;
				<td class="align-middle">
					<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
					<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
				</td>
				</tr>				
			}		
	</tbody>
</table>

<div class="text-white">
	<a asp-controller="Cookies" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>

