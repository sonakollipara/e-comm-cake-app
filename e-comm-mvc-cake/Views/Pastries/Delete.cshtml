@model Pastry

@{
    ViewData["Title"] = "Delete Pastry";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.PastryName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="PastryImagePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="PastryImage" class="control-label"></label>
                    <input asp-for="PastryImage" class="form-control" readonly />
                    <span asp-validation-for="PastryImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PastryName" class="control-label"></label>
                    <input asp-for="PastryName" class="form-control" readonly />
                    <span asp-validation-for="PastryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PastryFlavour" class="control-label"></label>
                    <input asp-for="PastryFlavour" class="form-control" readonly />
                    <span asp-validation-for="PastryFlavour" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PastryImagePreview');
            output.src = $("#PastryImage").val();
        })
    </script>
}
